{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "outDir": "dist",
    "typeRoots": ["typings"],
    "paths": {
      "@modules/*"    : ["modules/*"],
      "@services/*"   : ["services/*"],
      "@entities/*"   : ["entities/*"],
      "@middleware/*" : ["middleware/*"],
      "@typings/*"    : ["typings/*"],
      "@config/*"     : ["config/*"],
      "@utils/*"      : ["utils/*"],
      "@/*"           : ["*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
